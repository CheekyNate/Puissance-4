
class Console:
    '''
    RÃ©git les interactions entre la console et les joueurs
    Jeu : Puissance 4
    '''

    def __init__(self):
        self.lejeu = Plateau()

    def jouer(self):
        '''
        Permets de modifier dans le puissance 4 les valeurs du tableau
        '''
        colonne = int(input('Entrez la colonne dans laquelle vous voulez jouer : '))-1
        ligne = self.lejeu.jeu(colonne)
        if ligne ==-1 :
            print("ah")
            return False
        self.lejeu.jouer(colonne+ligne*7)
        return ligne
    
    def quijoue(self):
        return self.joueurtour
        
    def afficher(self):
        '''
        Affiche dans la console le jeu Puissance 4
        '''
        for x in range(5,-1,-1):
            for y in range(7):
                Jeton = " "
                if self.lejeu.get_case(x*7 +y)==1:
                    Jeton = "X"
                elif self.lejeu.get_case(x*7 +y)==2:
                    Jeton = "O"
                print("|"+Jeton, end= '')
            print("")
Onjoue = Console()
Onjoue.afficher()

